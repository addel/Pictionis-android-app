<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_drawing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.theghouls.pictionis.Activity.DrawingActivity"
    android:background="@color/colorPrimaryDark">


    <com.theghouls.pictionis.View.DrawingView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawing"
        android:background="@color/common_google_signin_btn_text_dark_default" />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageButton
            android:layout_width="match_parent"
            app:srcCompat="@drawable/new_paint"
            android:id="@+id/btnNew_paint"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />
        <ImageButton
            android:layout_width="match_parent"
            app:srcCompat="@drawable/brush"
            android:id="@+id/btnThick"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />
        <ImageButton
            android:layout_width="match_parent"
            app:srcCompat="@drawable/erase"
            android:id="@+id/btnErase"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:id="@+id/paint_colors">


        <ImageButton
            android:layout_width="@dimen/large_thick"
            android:layout_height="@dimen/large_thick"
            android:background="#FF660000"
            android:layout_margin="2dp"
            android:contentDescription="@string/paint"
            android:onClick="btnColorClicked"
            android:src="@drawable/color_button"
            android:tag="#FF660000"/>
        <ImageButton
            android:layout_width="@dimen/large_thick"
            android:layout_height="@dimen/large_thick"
            android:background="#FF000066"
            android:layout_margin="2dp"
            android:contentDescription="@string/paint"
            android:onClick="btnColorClicked"
            android:src="@drawable/color_button"
            android:tag="#FF000066"/>
        <ImageButton
            android:layout_width="@dimen/large_thick"
            android:layout_height="@dimen/large_thick"
            android:background="#FF076600"
            android:layout_margin="2dp"
            android:contentDescription="@string/paint"
            android:onClick="btnColorClicked"
            android:src="@drawable/color_button"
            android:tag="#FF076600"/>
        <ImageButton
            android:layout_width="@dimen/large_thick"
            android:layout_height="@dimen/large_thick"
            android:background="#fff200"
            android:layout_margin="2dp"
            android:contentDescription="@string/paint"
            android:onClick="btnColorClicked"
            android:src="@drawable/color_button"
            android:tag="#fff200"/>
        <ImageButton
            android:layout_width="@dimen/large_thick"
            android:layout_height="@dimen/large_thick"
            android:background="#FF00B7FF"
            android:layout_margin="2dp"
            android:contentDescription="@string/paint"
            android:onClick="btnColorClicked"
            android:src="@drawable/color_button"
            android:tag="#FF00B7FF"/>
        <ImageButton
            android:layout_width="@dimen/large_thick"
            android:layout_height="@dimen/large_thick"
            android:background="#FFFFFFFF"
            android:layout_margin="2dp"
            android:contentDescription="@string/paint"
            android:onClick="btnColorClicked"
            android:src="@drawable/color_button"
            android:tag="#FFFFFFFF"/>
        <ImageButton
            android:layout_width="@dimen/large_thick"
            android:layout_height="@dimen/large_thick"
            android:background="#FF000000"
            android:layout_margin="2dp"
            android:contentDescription="@string/paint"
            android:onClick="btnColorClicked"
            android:src="@drawable/color_button"
            android:tag="#FF000000"/>

    </LinearLayout>

</RelativeLayout>
